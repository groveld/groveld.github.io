---
permalink: /manifest.json
---

{
  "short_name": "{{ site.pwa_title }}",
  "name": "{{ site.title }}",
  "description": "{{ site.description }}",
  "default_locale": "{{ site.locale }}",
  "icons": [
    {
      "src": "{{ "/assets/images/icons/android-chrome-192x192.png" | relative_url }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ "/assets/images/icons/android-chrome-512x512.png" | relative_url }}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "start_url": "{{ "/" | relative_url }}",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "{{ site.pwa_color }}",
  "background_color": "{{ site.pwa_background }}"
}